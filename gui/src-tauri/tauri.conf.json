{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Prediction Manager",
  "version": "0.1.0",
  "identifier": "com.TwitchPredictionTool.gui",

  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },

  "bundle": {
    "active": true,
    "targets": ["appimage", "deb", "msi", "nsis"],
    "icon": ["icons/icon.png"]
  },

  "app": {
    "security": {
      "capabilities": ["default", "fs-scope"]
    },
    "windows": [
      {
        "title": "Prediction Manager",
        "width": 800,
        "height": 600
      }
    ]
  }
}
